<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Anadir">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/PreguntaeditText"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="-25dp"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/PreguntaeditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="121dp"
            android:ems="10"
            android:hint="@string/anadir_enunciado"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="173dp"
            android:hint="@string/categoria" />

        <EditText
            android:id="@+id/respuestaCorrecta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="255dp"
            android:ems="10"
            android:hint="@string/anadir_res_correcta"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/respuestaIncorrecta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-12dp"
            android:layout_marginBottom="215dp"
            android:ems="10"
            android:hint="@string/anadir_res_incorrecta1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/respuestaIncorrecta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-13dp"
            android:layout_marginBottom="164dp"
            android:ems="10"
            android:hint="@string/anadir_res_incorrecta2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/respuestaIncorrecta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/spinner"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-14dp"
            android:layout_marginBottom="115dp"
            android:ems="10"
            android:hint="@string/anadir_res_incorrecta3"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/botonAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="32dp"
            android:text="@string/anadir_boton" />

        <Button
            android:id="@+id/botoncat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PreguntaeditText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="36dp"
            android:text="@string/anadir_categoria" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignBottom="@+id/respuestaIncorrecta3"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="236dp"
            android:text="@string/choose_picture" />

        <Button
            android:id="@+id/buttonGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonCamera"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/from_gallery" />

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="8dp"
            android:text="@string/from_camera" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>